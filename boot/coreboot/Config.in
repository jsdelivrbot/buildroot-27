config BR2_TARGET_COREBOOT
	bool "coreboot"
	help
	  Build "coreboot" BIOS ROM

if BR2_TARGET_COREBOOT
choice
	prompt "coreboot Version"
	help
	  Select the specific coreboot version you want to use

config BR2_TARGET_COREBOOT_LATEST_VERSION
	bool "4.5"

config BR2_TARGET_COREBOOT_CUSTOM_VERSION
	bool "Custom version"
	help
	  This option allows to use a specific official versions

config BR2_TARGET_COREBOOT_CUSTOM_TARBALL
	bool "Custom tarball"

config BR2_TARGET_COREBOOT_CUSTOM_GIT
	bool "Custom Git repository"

config BR2_TARGET_COREBOOT_CUSTOM_HG
	bool "Custom Mercurial repository"

config BR2_TARGET_COREBOOT_CUSTOM_SVN
	bool "Custom Subversion repository"

endchoice

config BR2_TARGET_COREBOOT_CUSTOM_VERSION_VALUE
	string "coreboot version"
	depends on BR2_TARGET_COREBOOT_CUSTOM_VERSION

config BR2_TARGET_COREBOOT_CUSTOM_TARBALL_LOCATION
	string "URL of custom coreboot tarball"
	depends on BR2_TARGET_COREBOOT_CUSTOM_TARBALL

if BR2_TARGET_COREBOOT_CUSTOM_GIT || BR2_TARGET_COREBOOT_CUSTOM_HG || BR2_TARGET_COREBOOT_CUSTOM_SVN

config BR2_TARGET_COREBOOT_CUSTOM_REPO_URL
	string "URL of custom repository"
	default BR2_TARGET_COREBOOT_CUSTOM_GIT_REPO_URL \
		if BR2_TARGET_COREBOOT_CUSTOM_GIT_REPO_URL != ""  # legacy

config BR2_TARGET_COREBOOT_CUSTOM_REPO_VERSION
	string "Custom repository version"
	default BR2_TARGET_COREBOOT_CUSTOM_GIT_VERSION \
		if BR2_TARGET_COREBOOT_CUSTOM_GIT_VERSION != ""  # legacy
	help
	  Revision to use in the typical format used by Git/Mercurial/Subversion
	  E.G. a sha id, a tag, branch, ..

endif

config BR2_TARGET_COREBOOT_VERSION
	string
	default "4.5"	if BR2_TARGET_COREBOOT_LATEST_VERSION
	default BR2_TARGET_COREBOOT_CUSTOM_VERSION_VALUE \
		if BR2_TARGET_COREBOOT_CUSTOM_VERSION
	default "custom"	if BR2_TARGET_COREBOOT_CUSTOM_TARBALL
	default BR2_TARGET_COREBOOT_CUSTOM_REPO_VERSION \
		if BR2_TARGET_COREBOOT_CUSTOM_GIT || BR2_TARGET_COREBOOT_CUSTOM_HG || BR2_TARGET_COREBOOT_CUSTOM_SVN

config BR2_TARGET_COREBOOT_PATCH
	string "Custom coreboot patches"
	default BR2_TARGET_COREBOOT_CUSTOM_PATCH_DIR if BR2_TARGET_COREBOOT_CUSTOM_PATCH_DIR != ""  # legacy
	help
	  A space-separated list of patches to apply to coreboot.
	  Each patch can be described as an URL, a local file path,
	  or a directory. In the case of a directory, all files
	  matching *.patch in the directory will be applied.

	  Most users may leave this empty

choice
	prompt "coreboot configuration"
	default BR2_TARGET_COREBOOT_USE_DEFCONFIG

config BR2_TARGET_COREBOOT_USE_DEFCONFIG
	bool "Using an in-tree board defconfig file"

config BR2_TARGET_COREBOOT_USE_CUSTOM_CONFIG
	bool "Using a custom board (def)config file"

endchoice

config BR2_TARGET_COREBOOT_BOARD_DEFCONFIG
	string "Board defconfig"
	depends on BR2_TARGET_COREBOOT_USE_DEFCONFIG
	help
	  Name of the board for which coreboot should be built, without
	  the _defconfig suffix.

config BR2_TARGET_COREBOOT_CUSTOM_CONFIG_FILE
	string "Configuration file path"
	depends on BR2_TARGET_COREBOOT_USE_CUSTOM_CONFIG
	help
	  Path to the coreboot configuration file.

config BR2_TARGET_COREBOOT_LINUX_PAYLOAD
       bool "Include kernel as a payload"
       depends on BR2_LINUX_KERNEL
       help
	Include generated Linux into coreboot.rom

config BR2_TARGET_COREBOOT_LINUX_COMMAND
       string "Kernel command line"
       depends on BR2_TARGET_COREBOOT_LINUX_PAYLOAD
       help
	Include Command line to pass to linux kernel.

config BR2_TARGET_COREBOOT_ROOTFS_PAYLOAD
       bool "Include root filesystem in payload"
       depends on BR2_TARGET_COREBOOT_LINUX_PAYLOAD
       select BR2_TARGET_ROOTFS_CPIO
       help
	Add generated root filesystem to the payload
	
endif # BR2_TARGET_COREBOOT
